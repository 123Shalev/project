<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDB880"

    tools:context=".Screens.MainActivity">

        <Button
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="23dp"
            android:backgroundTint="#7A7443"
            android:fontFamily="@font/akaya_kanadaka"
            android:onClick="Signup"
            android:text="SIgn Up"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btnMyTasks"
            app:layout_constraintEnd_toEndOf="@+id/imageView" />

        <Button
            android:id="@+id/btnLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="23dp"
            android:backgroundTint="#7A7443"
            android:fontFamily="@font/akaya_kanadaka"
            android:text="Log In"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btnMyTasks"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <Button
            android:id="@+id/btnMyTasks"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:backgroundTint="#7A7443"
            android:fontFamily="@font/akaya_kanadaka"
            android:onClick="MyTasks"
            android:text="My Tasks"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="200dp"
            android:layout_height="80dp"

            android:layout_marginTop="93dp"
            android:layout_marginBottom="95dp"
            android:backgroundTint="#7A7443"
            android:fontFamily="@font/akaya_kanadaka"
            android:text="Add Task"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnMyTasks" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="200dp"
            android:layout_height="80dp"

            android:layout_marginTop="108dp"
            android:layout_marginBottom="109dp"
            android:backgroundTint="#7A7443"
            android:fontFamily="@font/akaya_kanadaka"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnLogOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMyTasks" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#7A7443"
            android:text="Log Out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#7A7443"
            android:text="Info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="349dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnLog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>