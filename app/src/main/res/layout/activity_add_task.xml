<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDB880"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הוסף משימה חדשה"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="המשימה"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"/>



        <EditText
            android:id="@+id/etDeadlineDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="תאריך יעד (YYYY-MM-DD)"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etDeadlineTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שעה (HH:MM)"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור משימה"
            android:backgroundTint="#7A7443"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
